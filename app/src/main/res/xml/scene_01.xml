<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        motion:duration="2000">
        <KeyFrameSet>
            <KeyAttribute
                android:scaleX="0.67"
                android:scaleY="0.67"
                motion:framePosition="50"
                motion:target="@id/imgFloor"/>
            <KeyAttribute
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:rotation="180"
                motion:framePosition="50"
                motion:target="@id/imgBall" />
            <KeyPosition
                motion:keyPositionType="parentRelative"
                motion:percentY="0.15"
                motion:framePosition="50"
                motion:target="@id/imgBall"/>
        </KeyFrameSet>
    </Transition>

    <ConstraintSet
        android:id="@+id/start">
        <Constraint
            android:id="@+id/imgFloor"
            android:src="@drawable/floor"
            android:layout_width="@dimen/floor_width"
            android:layout_height="@dimen/floor_height"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="32dp"/>
        <Constraint
            android:id="@+id/imgBall"
            android:src="@drawable/neutral_ball"
            android:layout_width="@dimen/ball_diameter"
            android:layout_height="@dimen/ball_diameter"
            motion:layout_constraintBottom_toBottomOf="@id/imgFloor"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/floor_height_half">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/end">
        <Constraint
            android:id="@+id/imgFloor"
            android:src="@drawable/floor"
            android:layout_width="@dimen/floor_width"
            android:layout_height="@dimen/floor_height"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="32dp"/>
        <Constraint
            android:id="@+id/imgBall"
            android:src="@drawable/neutral_ball"
            android:layout_width="@dimen/ball_diameter"
            android:layout_height="@dimen/ball_diameter"
            motion:layout_constraintBottom_toBottomOf="@id/imgFloor"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1"/>
        </Constraint>
    </ConstraintSet>

</MotionScene>